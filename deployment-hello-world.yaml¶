apiVersion: apps/v1
kind: Deployment
metadata:
  name: hello-world
  namespace: default
 spec:
  replicas: 2
  selector:
    matchLabels:
      app: hello-world-app
  template:
    metadata:
      labels:
        app: hello-world-app
    spec:
      containers:
      - env:
        - name: service_name
          value: hello-world-app
        image: pavansa/simple-mern-example:latest
        imagePullPolicy: IfNotPresent
        name: hello-world
        ports:
        - containerPort: 8080
          protocol: TCP
